<%= form_for @product do |p| %>
  <% if @product.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@product.errors.count, "error") %> prevented this product from being saved:</h3>

    <ul>
      <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="field">
    <%= p.label :name %><br>
    <%= p.text_field :name %>
  </div>
  <div class="field">
    <%= p.label :price_in_cents %><br>
    <%= p.text_field :price_in_cents %>
  </div>
  <div class="field">
    <%= p.label :description %><br>
    <%= p.text_area :description %>
  </div>
  <div class="actions"><%= p.submit "Submit" %></div>
<% end %>