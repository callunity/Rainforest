<h1>All Products</h1>

<%= form_tag products_path, method: :get, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search!" %>
<% end %>

<div class="all_products">
  <%= render @products %>
</div>


<p><% if current_user %>
  <%= link_to "Add new product", new_product_path %>
  <% end %>
</p>

<%= paginate @products %>
