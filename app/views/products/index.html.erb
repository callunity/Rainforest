<h1>All Products</h1>
<p>
  <% if @user.nil? %>
    <%= link_to "Sign up", new_user_path %> or <%= link_to "Log in", new_session_path %>
    <% else %>
    <p>Welcome, <%= @user.email %>!</p>
    <% end %>
</p>

<div class="all_products">
  <% @products.each do |p| %>
    <h2><%= link_to p.name, p %></h2>
    <h5>$<%= p.formatted_price %></h5> 
    <p><%= p.description %></p>
    <p><%= link_to "See moreâ€¦", p %></p><br>
  <% end %>
</div>

