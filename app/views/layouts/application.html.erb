<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>

  <p class="user_info">
  <% if current_user %>
    Welcome, <%= link_to current_user.first_name.capitalize, user_path(current_user) %>! <%= link_to "Log out", session_path("current"), :method => :delete %>
    <% else %>
      <%= link_to "Sign up", new_user_path %> or <%= link_to "Log in", new_session_path %>
    <% end %>
  </p>

  <%= yield %>

</body>
</html>
